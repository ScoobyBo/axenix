pipeline {
    agent { label 'ax 2' }

    parameters {
        string(name: 'postgresql_version', defaultValue: '15')
        string(name: 'replication_user', defaultValue: 'replicator')
        password(name: 'replication_password')
        string(name: 'replication_network', defaultValue: '10.0.0.0/24')
    }

    stages {
        stage('Run Ansible Role postgre_install') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: "postgre_install.yml",
                        inventory: "/home/inventary.yml",
                        extraVars: [
                            postgresql_version: params.postgresql_version,
                            replication_user: params.replication_user,
                            replication_password: params.replication_password,
                            replication_network: params.replication_network
                        ],
                        colorized: true
                    )
                }
            }
        }
    }
}
