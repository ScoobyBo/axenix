pipeline {
    agent { label 'ax 2' }

    parameters {
        string(name: 'backup_cron_hour', defaultValue: '3', description: 'Час запуска cron-задачи')
        string(name: 'backup_cron_minute', defaultValue: '0', description: 'Минута запуска cron-задачи')
        string(name: 'max_backup', defaultValue: '30', description: 'Максимальное количество хранимых бэкапов')
        string(name: 'backup_dir', defaultValue: '', description: 'Каталог для хранения бэкапов')
        string(name: 'backup_user', defaultValue: 'pgbackup', description: 'Пользователь для выполнения бэкапов PostgreSQL')
        string(name: 'postgres_admin_user', defaultValue: 'Ivan_administrator')
        string(name: 'db_name', defaultValue: 'postgres', description: 'База данных, бэкап которой создают')
        password(name: 'postgres_admin_password')
        password(name: 'vault_password', description: 'Пароль для расшифровки приватного ключа')
    }

    options {
        timeout(time: 5, unit: 'MINUTES')
    }

    stages {

        stage('Decrypt SSH key') {
            steps {
                sh '''
                    echo "$vault_password" > vault_pass.txt
                    ansible-vault decrypt private_key_vaulted \
                        --output /home/jenkins/private_key \
                        --vault-password-file vault_pass.txt

                    chmod 600 /home/jenkins/private_key
                '''
            }
        }

        stage('Run Ansible Role') {
            steps {
                script {

                    ansiblePlaybook(
                        playbook: "playbook.yml",
                        inventory: "/home/inventary.yml",

                        extraVars: [
                            backup_dir: params.backup_dir,
                            max_backups: params.max_backups,
                            cron_hour: params.cron_hour,
                            cron_minute: params.cron_minute,
                            pg_superuser: params.pg_superuser,
                            pg_dumpall_path: params.pg_dumpall_path,
                            backup_user: params.backup_user,
                            backup_user_home: params.backup_user_home,
                            ANSIBLE_ROLE: "postgre_backup"
                        ],

                        
                        privateKey: "private_key",

                        colorized: true
                    )
                }
            }
        }
    }

    post {
        always {
            sh '''
                rm -f vault_pass.txt /home/jenkins/private_key
            '''
        }
    }
}
